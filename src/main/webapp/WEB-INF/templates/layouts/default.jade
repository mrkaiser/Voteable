-@ val title: String
-@ val headline: String = title
-@ val body: String

!!!
html
  head
    title= title
    link(rel='stylesheet'
        href='//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css')
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')    
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular.min.js')

  body(class="col-md-6 col-md-offset-3")
    #content
      h1= headline
      != body
      div(ng-app='vote' )
        div
        iframe(
          width='560'
          height='315'
          src='//www.youtube.com/embed/O435k1yfztw'
          frameborder='0'
          allowfullscreen)
        div(ng-controller='ListCtrl')
          ol
            li(ng-repeat='queable in queue' class="list-unstyled")
              |<h3>{{queable.id}}|{{queable.votes}}</h3>


    
    script(src='//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js')
    script(src='/js/listctrl.js')
    
